azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24

body 
	background #E8E8E8
	color gris_oscuro
	font-family Arial 
	font-size 16px
	position relative


header 
	background gris_oscuro
	color white 
	overflow hidden
	padding 0.5em

	.logo
		border-right 1px solid azul 
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			font-weight normal
			margin -5px 1em 0 0 
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

.usuario
	position absolute
	right 10px
	top 10px

	.avatar
		margin 0 1em 0 0 
		position relative
		z-index 2

		img
			border-radius 50%
			width 50px

	.flechita
		background naranja
		color white
		display block
		padding 3px
		position absolute
		right 0
		text-align right
		top 15px
		width 50%
		z-index 0

nav
	background azul
	border-left 15px solid white 
	position relative
		

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li 
			display inline-block
			
			a
				color white
				display inline-block
				text-decoration none
				padding 0.5em 
				margin 0 0.5em 




